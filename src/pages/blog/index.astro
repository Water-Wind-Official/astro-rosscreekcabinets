---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.post-grid {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 1.6em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.post-card {
				display: grid;
				grid-template-rows: auto 1fr;
				overflow: hidden;
				color: inherit;
				text-decoration: none;
				transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
			}
			.post-card img {
				width: 100%;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				display: block;
				border-radius: 0;
				box-shadow: none;
			}
			.post-meta {
				padding: 1.1em 1.15em 1.2em 1.15em;
				background: linear-gradient(180deg, rgba(var(--ring), 0.14), rgba(var(--ring), 0));
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.15;
				font-size: 1.25em;
			}
			.date {
				margin: 0.35em 0 0 0;
				color: rgb(var(--gray));
			}
			.post-card:hover {
				transform: translateY(-3px);
				box-shadow: var(--shadow-md);
				border-color: rgba(var(--ring), 0.45);
			}
			.post-card:hover .title {
				color: var(--accent-dark);
			}
			@media (max-width: 720px) {
				.post-grid {
					grid-template-columns: 1fr;
					gap: 1em;
				}
				.title {
					font-size: 1.18em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul class="post-grid">
					{
						posts.map((post) => (
							<li>
								<a class="post-card card" href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<div class="post-meta">
										<h4 class="title">{post.data.title}</h4>
										<p class="date"><FormattedDate date={post.data.pubDate} /></p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
