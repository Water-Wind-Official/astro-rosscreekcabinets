---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<p>Cabinetry built in Waycross, GA</p>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/#services">Services</HeaderLink>
			<HeaderLink href="/#gallery">Gallery</HeaderLink>
			<HeaderLink href="/#process">Process</HeaderLink>
			<HeaderLink href="/#about">About</HeaderLink>
			<HeaderLink href="/#contact">Contact</HeaderLink>
		</div>
		<a class="cta" href="tel:+19123371152">Call 912-337-1152</a>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.25em;
		background: #fff;
		box-shadow: 0 6px 30px rgba(var(--black), 6%);
		position: sticky;
		top: 0;
		z-index: 10;
	}
	nav {
		display: grid;
		grid-template-columns: auto 1fr auto;
		align-items: center;
		gap: 1em;
		max-width: 1200px;
		margin: 0 auto;
	}
	.brand h2 {
		margin: 0;
		font-size: 1.1em;
	}
	.brand p {
		margin: 0.1em 0 0 0;
		font-size: 0.9em;
		color: rgb(var(--gray));
	}
	.brand a {
		text-decoration: none;
		color: rgb(var(--black));
	}
	.internal-links {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.25em;
		justify-content: flex-end;
	}
	nav a {
		padding: 0.9em 0.6em;
		color: rgb(var(--black));
		text-decoration: none;
		border-bottom: 3px solid transparent;
	}
	nav a.active {
		border-bottom-color: var(--accent);
		font-weight: 700;
	}
	.cta {
		background: var(--accent);
		color: white;
		border-radius: 999px;
		padding: 0.65em 1.1em;
		font-weight: 700;
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
		border: 1px solid var(--accent-dark);
	}
	.cta:hover {
		background: var(--accent-dark);
		color: white;
	}
	@media (max-width: 960px) {
		nav {
			grid-template-columns: 1fr;
			gap: 0.5em;
		}
		.brand {
			text-align: center;
		}
		.internal-links {
			justify-content: center;
		}
		.cta {
			justify-self: center;
			width: 100%;
			text-align: center;
		}
	}
</style>
